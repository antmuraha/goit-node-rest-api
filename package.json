{
    "name": "goit-node-rest-api",
    "type": "module",
    "scripts": {
        "start": "node --permission --allow-fs-read=. ./app.js",
        "dev": "nodemon --permission --allow-fs-read=. ./app.js",
        "db:migrate": "sequelize-cli db:migrate",
        "db:migrate:undo": "sequelize-cli db:migrate:undo",
        "db:seed": "sequelize-cli db:seed:all",
        "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^17.2.4",
        "express": "^4.18.2",
        "joi": "^17.11.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.3",
        "sequelize": "^6.37.7"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "sequelize-cli": "^6.6.5"
    }
}
